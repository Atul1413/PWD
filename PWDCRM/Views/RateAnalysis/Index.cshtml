
@{
    ViewBag.Title = "Rate Analysis";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
    var MaterialCount = 5;
}
<style>
    table {
    display: block;
    overflow-x: auto;
    white-space: nowrap;
}
</style>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title text-primary"><i class="fa fa-certificate"></i> @ViewData["Title"]</h3>
                <div class="box-tools pull-right">
                    <a class="btn btn-primary" href="@Url.Action("WorkData", "Estimate")">
                        Go Estimate List
                    </a>
                </div>
            </div>
            <div class="box-body">
                <div id="Grid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label text-right">Name of Work</label>
                                <div class="col-md-2">
                                    <label>@(Model != null ? Model.NameOfWork : "NA")</label>
                                    <input type="hidden" id="txtWorkIdLead" name="WorkIdLead" value="@(Model!=null?Convert.ToInt32(Model.Id):0)" />

                                </div>

                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel-heading dt-head-center">
                                <h3>Rate Analysis</h3>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <table class="table table-hover table-responsive table-condensed table-bordered">
                                <thead>
                                    <tr>
                                       <th>Sr.No</th>
                                       <th>Items of Works</th>
                                       <th>Item No</th>
                                       <th>Rate</th>
                                       <th>Add for </th>    
                                       <th>Add for </th>    
                                       <th>Floor Rise</th>    
                                       <th><table>
                                           <tr>
                                               <th colspan="6">LEAD CHARGES </th>
                                           </tr>
                                           <tr>
                                               <th>Add for Material Diff.</th>
                                               <th>Material</th>
                                               <th>Unit con</th>
                                               <th>Lead Charges</th>
                                               <th>Total Lead Charges</th>
                                               <th>Deduct Royalty Charges</th>
                                           </tr>
                                           </table>
                                        </th>    
                                       <th>Special charges if any</th>
                                       <th>Completed Rate</th>
                                       <th>Remarks</th>
                                    </tr>
                                </thead>
                                <tbody>
                                   
                                </tbody>
                            </table>
                        </div>
                    </div>
                   
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->