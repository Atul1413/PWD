
@{
    ViewBag.Title = "AddLeadCharges";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}

<h2>Add Lead Charges</h2>

<div class="content-wrapper" ng-controller="AddLeadCharges">
<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title text-primary"><i class="fa fa-certificate"></i> @ViewData["Title"]</h3>
        </div>
        <div class="box-body">
            <div id="Grid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label text-right">Name of Work</label>
                            <div class="col-md-2">
                                <label>@(Model != null ? Model.NameOfWork : "NA")</label>
                                <input type="hidden" id="txtWorkId" name="NameOfWork" value="@(Model!=null?Model.Id:0)" />

                            </div>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel-heading dt-head-center">
                            <h3>LEAD CHART</h3>
                        </div>
                    </div>


                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <table class="table table-hover table-responsive table-condensed">
                            <thead>
                                <tr>
                                    <th>Name of Material</th>
                                    <th>Lead in KM</th>
                                    <th>Source of Material</th>
                                    <th>Initial Lead KM</th>
                                    <th>Remarks</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <select class="form-control" required="" id="ddlMaterial" name="Select Material">
                                            <option value="" class="hidden" selected disabled>Select Material Type</option>
                                            <option value="">Material 1</option>
                                            <option value="" >Material 2</option>
                                            <option value="">Material 3</option>
                                            <option value="">Material 4</option>
                                        </select>
                                    @*<input type="text" class="Material" name="Remarks" id="txtMaterial" /></td>*@
                                    <td><input type="text" data-id="LeadinKM" class="inputClass mathFormula" required name="Number" id="txtLeadKm" /></td>
                                    <td><input type="text" data-id="Source" class="inputClass mathFormula"  id="txtSourceOfLocation" /></td>
                                    <td><input type="text" data-id="InitialLead" class="inputClass mathFormula" id="txtInitialLead" /></td>
                                    <td><input type="text" data-id="remark" class="inputClass" id="txtRemarks" /></td>

                                    <td><input type="button" class="btn btn-sm btn-default" value="Add" name="Add" id="btnAdd" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
</div>
