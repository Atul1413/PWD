@model PWDCRM.Models.WorkDataDetail
@{
    ViewBag.Title = "Edit Work Data";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title text-primary"><i class="fa fa-certificate"></i> @ViewData["Title"]</h3>
                <div class="box-tools pull-right">
                    <a class="btn btn-primary" href="@Url.Action("WorkData", "Estimate")">
                        Go Estimate List
                    </a>
                </div>
            </div>
            <div class="box-body">
                @using (@Html.BeginForm("EditWorkData", "Estimate", FormMethod.Post))
                {
                    @Html.AntiForgeryToken();
                    <div id="Grid">
                        <div class="row register-form">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <input type="hidden"  value="@Model.Id" name="Id" />
                                    <label class="col-md-4 col-form-label text-right">Name of Work</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" placeholder="Name of Work" value="@(Model.NameOfWork!=null?Model.NameOfWork:"")" required="required" name="NameOfWork" id="txtNameOfWork" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-right">Enter Total Sub Work</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" placeholder="Enter Total Sub Work" required="required" value="@(Model.SubWorkData!=null?Model.SubWorkData:"")" name="SubWorkData" id="txtSubWorkData" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-right">SSR(Schedule of Rates)</label>
                                    <div class="col-md-6">
                                        <select class="form-control" required="required" id="ddlSSR" name="SSRRate">
                                            <option value="" class="hidden" selected disabled>Please select your SSR(Schedule of Rates)</option>
                                            <option @(Model.SSRRate=="SSR 17-18"?"selected":"") value="SSR 17-18">SSR 17-18</option>
                                            <option @(Model.SSRRate=="SSR 18-19"?"selected":"") value="SSR 18-19">SSR 18-19</option>
                                            <option @(Model.SSRRate=="SSR 19-20"?"selected":"") value="SSR 19-20">SSR 19-20</option>
                                            <option @(Model.SSRRate=="SSR 20-21"?"selected":"") value="SSR 20-21">SSR 20-21</option>
                                            <option @(Model.SSRRate=="SSR 21-22"?"selected":"") value="SSR 21-22">SSR 21-22</option>
                                        </select>
                                    </div>
                                </div>
                                @*<div class="form-group row">
                                        <label class="col-md-4 col-form-label text-right"> Department</label>
                                        <div class="col-md-6">
                                            <select class="form-control" required="required" id="ddlDepartment" name="Department">
                                                <option value="" class="hidden" selected disabled>Please select your Department</option>
                                                <option value="Home Department">Home Department</option>
                                                <option value="Education Department">Education Department</option>
                                                <option value="Revenue Department">Revenue Department</option>
                                            </select>
                                        </div>
                                    </div>*@
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-right"> Head of Accounts</label>
                                    <div class="col-md-6">
                                        <select class="form-control" required="required" id="ddlHeadOfAccounts" name="HeadOfAccounts">
                                            <option value="" class="hidden" selected disabled>Please select your Head of Accounts</option>
                                            <option @(Model.HeadOfAccounts=="Home DepartmentHOA"?"selected":"") value="Home DepartmentHOA">Home Department</option>
                                            <option @(Model.HeadOfAccounts=="Education DepartmentHOA"?"selected":"") value="Education DepartmentHOA">Education Department</option>
                                            <option @(Model.HeadOfAccounts=="Revenue DepartmentHOA"?"selected":"") value="Revenue DepartmentHOA">Revenue Department</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-right">Area</label>
                                    <div class="col-md-6">
                                        <select class="form-control" required="required" id="ddlArea" name="Area">
                                            <option value="" class="hidden" selected disabled>Please select your Area</option>
                                            <option @(Model.Area=="Home DepartmentAREA"?"selected":"") value="Home DepartmentAREA">Home Department</option>
                                            <option @(Model.Area=="Education DepartmentAREA"?"selected":"") value="Education DepartmentAREA">Education Department</option>
                                            <option @(Model.Area=="Revenue DepartmentAREA"?"selected":"") value="Revenue DepartmentAREA">Revenue Department</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-right">Cost of Diff</label>
                                    <div class="col-md-4">
                                        <input type="radio" name="CostDiff" value="Yes" id="CostDiff1" @(Model.CostDiff=="Yes"?"checked":"") />&nbsp;<label for="CostDiff1">Yes</label> &nbsp;&nbsp;&nbsp;
                                        <input type="radio" name="CostDiff" value="No" id="CostDiff2" @(Model.CostDiff=="No"?"checked":"")  />&nbsp;<label for="CostDiff2">No</label>
                                    </div>
                                    @*<label class="col-md-3 col-form-label text-right">Fund Head</label>
                                        <div class="col-md-3">
                                            <input type="text" class="form-control" placeholder="Contingencie %" required="required" name="FundHead" id="txtFundHead" />
                                        </div>*@
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-right">Sub-Divsion</label>
                                    <div class="col-md-6">
                                        <select class="form-control" id="ddlSub-Divsion" name="SubDivsion">
                                            <option value="" class="hidden" selected disabled>Please select your Sub-Divsion</option>
                                            <option @(Model.SubDivsion=="Home DepartmentSUBDIV"?"selected":"") value="Home DepartmentSUBDIV">Home Department</option>
                                            <option @(Model.SubDivsion=="Education DepartmentSUBDIV"?"selected":"") value="Education DepartmentSUBDIV">Education Department</option>
                                            <option @(Model.SubDivsion=="Revenue DepartmentSUBDIV"?"selected":"") value="Revenue DepartmentSUBDIV">Revenue Department</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-right">Divison</label>
                                    <div class="col-md-6">
                                        <select class="form-control" id="ddlDivison" name="Divison">
                                            <option value="" class="hidden" selected disabled>Please select your Divison</option>
                                            <option @(Model.Divison=="Home DepartmentDIV"?"selected":"") value="Home DepartmentDIV">Home Department</option>
                                            <option @(Model.Divison=="Education DepartmentDIV"?"selected":"") value="Education DepartmentDIV">Education Department</option>
                                            <option @(Model.Divison=="Revenue DepartmentDIV"?"selected":"") value="Revenue DepartmentDIV">Revenue Department</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-right">Circle</label>
                                    <div class="col-md-6">
                                        <select class="form-control" id="ddlCircle" name="Circle">
                                            <option value="" class="hidden" selected disabled>Please select your Circle</option>
                                            <option @(Model.Circle=="Home DepartmentCircle"?"selected":"") value="Home DepartmentCircle">Home Department</option>
                                            <option @(Model.Circle=="Education DepartmentCircle"?"selected":"") value="Education DepartmentCircle">Education Department</option>
                                            <option @(Model.Circle=="Revenue DepartmentCircle"?"selected":"") value="Revenue DepartmentCircle">Revenue Department</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-right">Region</label>
                                    <div class="col-md-6">
                                        <select class="form-control" id="ddlRegion" name="Region">
                                            <option value="" class="hidden" selected disabled>Please select your Region</option>
                                            <option @(Model.Region=="Home DepartmentRegion"?"selected":"") value="Home DepartmentRegion">Home Department</option>
                                            <option @(Model.Region=="Education DepartmentRegion"?"selected":"") value="Education DepartmentRegion">Education Department</option>
                                            <option @(Model.Region=="Revenue DepartmentRegion"?"selected":"") value="Revenue DepartmentRegion">Revenue Department</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label text-right">Remarks</label>
                                    <div class="col-md-8">
                                        <textarea class="form-control" id="txtRemarks" name="Remarks">@(Model.Remarks)</textarea>
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-md-3 col-form-label text-right">Royalty</label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" placeholder="Enter Royalty" value="@(Model.Royalty!=null?Model.Royalty:"")" required="required" id="txtRoyalty" name="Royalty" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 col-form-label text-right">Type of SAND</label>
                                    <div class="col-md-5">
                                        <select class="form-control" required="required" id="ddlTypeSAND" name="TypeSAND">
                                            @*<option value="" class="hidden" selected disabled>Please select your Type SAND</option>*@
                                            <option @(Model.TypeSAND=="R.A With Natural Sand"?"selected":"") value="R.A With Natural Sand" selected>R.A With Natural Sand  </option>
                                            <option @(Model.TypeSAND=="R.A. With V.S.I Sand"?"selected":"") value="R.A. With V.S.I Sand">R.A. With V.S.I Sand</option>
                                            <option @(Model.TypeSAND=="R.A. With Natural Sand And V.S.I Sand Ratio"?"selected":"") value="R.A. With Natural Sand And V.S.I Sand Ratio">R.A. With Natural Sand And V.S.I Sand Ratio</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3" id="addDivPer">
                                        <input type="text" class="form-control" placeholder="SAND Percentage" required="required" value="@(Model.SANDPercentage!=null?Model.SANDPercentage:"")" name="SANDPercentage" id="txtSANDPercentage" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 col-form-label text-right">V & QC Charges</label>
                                    <div class="col-md-3">
                                        <input type="text" class="form-control" placeholder="V & QC Charges" value="@(Model.VAndQCPercentage!=null?Model.VAndQCPercentage:"")" name="VAndQCPercentage" id="txtVAndQCPercentage" />
                                    </div>
                                    <label class="col-md-3 col-form-label text-right">Internal Electrification</label>
                                    <div class="col-md-3">
                                        <input type="text" class="form-control" placeholder="Internal Electrification" value="@(Model.ElectricalINTPer!=null?Model.ElectricalINTPer:"")" name="ElectricalINTPer" id="txtElectricalINTPer" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 col-form-label text-right">External Electrification</label>
                                    <div class="col-md-3">
                                        <input type="text" class="form-control" placeholder="External Electrification" value="@(Model.ElectricalExtPer!=null?Model.ElectricalExtPer:"")" name="ElectricalExtPer" id="txtElectricalExtPer" />
                                    </div>
                                    <label class="col-md-3 col-form-label text-right">Water Supply Charges</label>
                                    <div class="col-md-3">
                                        <input type="text" class="form-control" placeholder="Water Supply Charges" value="@(Model.WaterSupply!=null?Model.WaterSupply:"")" name="WaterSupply" id="txtWaterSupply" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 col-form-label text-right"> Other Charges</label>
                                    <div class="col-md-3">
                                        <input type="text" class="form-control" placeholder="Other Charges" value="@(Model.AnyOthercharg1!=null?Model.AnyOthercharg1:"")" name="AnyOthercharg1" id="txtAnyOthercharg1" />
                                    </div>
                                    <label class="col-md-3 col-form-label text-right"> Other Charges</label>
                                    <div class="col-md-3">
                                        <input type="text" class="form-control" placeholder="Other Charges" value="@(Model.AnyOthercharg2!=null?Model.AnyOthercharg2:"")" name="AnyOthercharg2" id="txtAnyOthercharg2" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 col-form-label text-right">Iabour insurance </label>
                                    <div class="col-md-3">
                                        <input type="text" class="form-control" placeholder="Labour insurance" value="@(Model.LabourInsurance!=null?Model.LabourInsurance:"")" name="LabourInsurance" id="txtLabourInsurance" />
                                    </div>
                                    <label class="col-md-3 col-form-label text-right">GST</label>
                                    <div class="col-md-3">
                                        <input type="text" class="form-control" placeholder="GST" required="required" value="@(Model.GST!=null?Model.GST:"")" name="GST" id="txtGST" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-3 col-form-label text-right">Contingencie</label>
                                    <div class="col-md-3">
                                        <input type="text" class="form-control" placeholder="Contingencie" value="@(Model.Contingencie!=null?Model.Contingencie:"")" name="Contingencie" id="txtContingencie" />
                                    </div>
                                    <label class="col-md-3 col-form-label text-right">Centage Charges</label>
                                    <div class="col-md-3">
                                        <input type="text" class="form-control" placeholder="Centage Charges" value="@(Model.ServiceCharges!=null?Model.ServiceCharges:"")"  name="ServiceCharges" id="txtServiceCharges" />
                                    </div>
                                </div>

                                <fieldset>
                                    <legend>test</legend>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label text-right">Work Order No</label>
                                        <div class="col-md-3">
                                            <input type="text" class="form-control" placeholder="Work Order No" value="@(Model.WorkOrderNo!=null?Model.WorkOrderNo:"")" name="WorkOrderNo" id="txtWorkOrderNo" />
                                        </div>
                                        <label class="col-md-3 col-form-label text-right"> Tendered</label>
                                        <div class="col-md-3">
                                            <input type="text" class="form-control" placeholder="Tendered" value="@(Model.Tendered!=null?Model.Tendered:"")" name="Tendered" id="txtTendered" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label text-right">Name of Agency</label>
                                        <div class="col-md-6">
                                            <input type="text" class="form-control" placeholder="Name Of Agency" required="required" value="@(Model.NameOfAgency!=null?Model.NameOfAgency:"")" name="NameOfAgency" id="txtNameOfAgency" />
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label text-right">Agreement No</label>
                                        <div class="col-md-6">
                                            <input type="text" class="form-control" placeholder="Agreement No" required="required" value="@(Model.AgreementNo!=null?Model.AgreementNo:"")" name="AgreementNo" id="txtAgreementNo" />
                                        </div>
                                    </div>

                                </fieldset>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group row">
                                    <div class="col-md-4 text-right">
                                        <a class="btn btn-danger" href="@Url.Action("WorkData", "Estimate")">Back </a>
                                    </div>
                                    <div class="col-md-4 text-right">
                                        <input type="submit" class="btn-primary btn btn-md" value="Update" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<script type="text/javascript">
    $(document).ready(function () {
        var getData = '@(Model.TypeSAND!=null?Model.TypeSAND:"")';
        alert(getData);
        if (getData == "R.A. With Natural Sand And V.S.I Sand Ratio") {
             $("#addDivPer").show();
        }

    });
</script>